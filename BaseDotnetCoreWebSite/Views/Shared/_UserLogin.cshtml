
@{
    var UserName = string.Empty;
    var UserId = string.Empty;
    if (User.Identity.IsAuthenticated)
    {
        UserName = User.FindFirst("UserName").Value;
        UserId = User.Identity.Name;
    }


}


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">@UserName  (@UserId)</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">登出</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>